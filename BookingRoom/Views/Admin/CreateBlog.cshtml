@model BookingRoom.Models.Blog

@{
    ViewBag.Title = "Tạo Bài Viết";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Tạo Bài Viết Mới</h4>
                <hr />
                @using (Html.BeginForm("CreateBlog", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <hidden typeof="date" name="TimeModified" value="12/12/2019"></hidden>
                    <hidden typeof="date" name="LastUpdate" value="12/12/2019"></hidden>
                    <hidden typeof="date" name="Status" value="true"></hidden>
                    <hidden typeof="date" name="Cover" value="default.jpg"></hidden>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "col-form-label col-md-3" })
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ShortDescription, htmlAttributes: new { @class = "col-form-label col-md-3" })
                                @Html.EditorFor(model => model.ShortDescription, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.BlogCategoryID, "Chuyên Mục", htmlAttributes: new { @class = "col-form-label" })
                                @Html.DropDownList("BlogCategoryID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.BlogCategoryID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-form-label" for="CoverPicture">Hình đại diện</label>
                                <div class="row">
                                    <div class="col-8 p-0">
                                        <input type="file" name="CoverPicture" class="file-upload-default" accept=".png, .jpg, .jpeg">
                                        <input type="text" class="form-control file-upload-info" disabled="" placeholder="Chấp nhận JPG, PNG, JPEG">
                                    </div>
                                    <span class="input-group-append">
                                        <button class="file-upload-browse btn-sm btn btn-gradient-primary" type="button">Chọn Hình</button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "col-form-label col-12" })
                        <div class="col-12">
                            <textarea name="Content" id="editor" placeholder="Nhập nội dung tại đây"></textarea>
                            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-12">
                            <input type="submit" value="Hoàn Tất và Đăng" class="btn btn-primary" />
                            @Html.ActionLink("Quay Lại", "Blogs", "Admin", null, new { @class = "btn btn-secondary ml-2" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script>
    CKEDITOR.replace('editor');
</script>
