@model BookingRoom.Models.BlogCategory

@{
    ViewBag.Title = "DeleteBlogCategory";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4>Bạn thực sự muốn xóa chuyên mục này?</h4>
