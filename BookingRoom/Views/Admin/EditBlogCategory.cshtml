@model BookingRoom.Models.BlogCategory

@{
    ViewBag.Title = "Chỉnh Sửa Chuyên Mục " + Model.Name;
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4>Thay đổi tên chuyên mục và nhấn "Cập Nhật"</h4>
                <hr />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.BlogCategoryID)

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-md-2 col-4 col-form-label" })
                        <div class="col-md-10 col-8">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-10 offset-md-2 col-8 offset-4">
                            <input type="submit" value="Cập Nhật" class="btn btn-primary btn-sm" />
                            @Html.ActionLink("Quay Lại", "BlogCategories", "Admin", null, new { @class = "btn btn-secondary ml-2 btn-sm" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

