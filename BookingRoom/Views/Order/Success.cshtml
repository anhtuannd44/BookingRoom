@model BookingRoom.Models.BookingContact

@{
    ViewBag.Title = "Thành Công";
    Layout = "~/Views/Shared/Home/_HomeLayout.cshtml";
    var total = Model.Room.Price + Model.Room.Price * 0.15;
}

<div class="container my-4">
    <div class="row">
        <div class="col-md-8 col-12">
            <div class="card shadow border rounded-0">
                <div class="card-body p-3">
                    <h3 class="font-weight-bold mb-3 text-success">Chúc mừng! Bạn đã đặt phòng thành công!</h3>
                    <p class="card-description text-danger small">Hiện tại, chức năng đặt phòng đang nâng cấp, chúng tôi sẽ liên hệ với bạn qua Số điện thoại hoặc Email mà bạn đã cung cấp để xác nhận!</p>
                    <hr />
                    <p>Mã đặt phòng của bạn: <span class="font-weight-bold">@Model.BookingContactID</span></p>
                    <table class="table table-bordered table-striped ordersuccess-table">
                        <thead class="bg-dark text-light">
                            <tr>
                                <th class="text-left">Nội dung</th>
                                <th class="text-right">Thông Tin</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-left">Nhà Nghỉ</td>
                                <td class="text-right text-primary">@Model.Room.House.Name</td>
                            </tr>
                            <tr>
                                <td class="text-left">Tên Phòng</td>
                                <td class="text-right">@Model.Room.Name</td>
                            </tr>
                            <tr>
                                <td class="text-left">Loại Phòng</td>
                                <td class="text-right">@Model.Room.TypeOfRoom.Name</td>
                            </tr>
                            <tr>
                                <td class="text-left">Ngày Nhận Phòng</td>
                                <td class="text-right">12:00 - 12/12/2019</td>
                            </tr>
                            <tr>
                                <td class="text-left">Ngày Trả Phòng</td>
                                <td class="text-right">12:00 - 14/12/2019</td>
                            </tr>
                            <tr>
                                <td class="text-left">Số Phòng</td>
                                <td class="text-right">1</td>
                            </tr>
                            <tr>
                                <td class="text-left">Giá Gốc</td>
                                <td class="text-right text-primary"><del>@Model.Room.Price.ToString("0,0 đ")</del></td>
                            </tr>
                            <tr>
                                <td class="text-left">Giảm Giá</td>
                                <td class="text-right">0đ</td>
                            </tr>
                            <tr>
                                <td class="text-left">Phí đặt trước</td>
                                <td class="text-right text-success">MIỄN PHÍ</td>
                            </tr>
                        </tbody>
                        <tfoot class="bg-light">
                            <tr>
                                <td class="text-left">TỔNG CỘNG</td>
                                <td class="text-right font-weight-bold">333.500 đ</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <div class="card-footer">
                    <h5 class="mb-0">Chúng tôi sẽ gửi Email vào Email quý vị cung cấp sau khi nhập thông tin hoàn tất!</h5>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-12">
            <div class="sticky-top" style="top:76px; z-index:9;">
                <div class="card shadow border rounded-0">
                    <div class="position-absolute py-1 px-2 bg-primary font-weight-bold text-white label-room-info" style="left: -8px">
                        <p class="m-0">Thông Người Đặt</p>
                    </div>
                    <div class="card-body p-3 mt-4">
                        <h5 class="mb-2 font-weight-bold">Họ và Tên: <span class="text-primary">@Model.PersonName</span></h5>
                        <hr width="30%" class="ml-0 my-2">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <td class="text-left p-2">Email</td>
                                    <td class="text-right p-2">@Model.Email</td>
                                </tr>
                                <tr>
                                    <td class="text-left p-2">Điện Thoại</td>
                                    <td class="text-right p-2">@Model.PhoneNumber</td>
                                </tr>
                            </tbody>
                        </table>
                        <a href="@Url.Action("Index","Home")" class="btn btn-primary btn-sm mt-4">Trở về Trang Chủ</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>