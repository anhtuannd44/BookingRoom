@model BookingRoom.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Đổi Mật Khẩu";
    Layout = "~/Views/Shared/_LayoutSearchInfo.cshtml";
}

<div class="container mb-5" style="margin-top: 100px;">
    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm("ChangePassword", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Điền thông tin vào để đổi mật khẩu của mình</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <label class="offset-md-4 col-md-4 control-label" for="OldPassword">Mật Khẩu Hiện Tại</label>
            <div class="offset-md-4 col-md-4">
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="offset-md-4 col-md-4 control-label" for="NewPassword">Mật Khẩu Mới</label>
            <div class="offset-md-4 col-md-4">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="offset-md-4 col-md-4 control-label" for="ConfirmPassword">Xác Nhận Mật Khẩu</label>
            <div class="offset-md-4 col-md-4">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="offset-md-4 col-md-4">
                <input type="submit" value="Đổi Mật Khẩu" class="btn btn-primary btn-block" />
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}