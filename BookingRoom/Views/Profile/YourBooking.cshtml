@model IEnumerable<BookingRoom.Models.Order>

@{
    ViewBag.Title = "YourBooking";
    Layout = "~/Views/Shared/_LayoutSearchInfo.cshtml";
}

<div class="container" style="margin-top: 100px;">
    <div class="row">
        <div class="col-lg-12">
            @if (Model == null)
            {
                <h5 class="text-primary">Bạn chưa có đơn đặt phòng nào</h5>
            }
            else
            {
                <table class="table">
                    <tr>
                        <th>
                            Ngày Đặt
                        </th>
                        <th>
                            Số Phòng
                        </th>
                        <th>
                            Nhận Phòng
                        </th>
                        <th>
                            Trả Phòng
                        </th>
                        <th>
                            Giá Phòng
                        </th>
                        <th>
                            Khuyến Mãi
                        </th>
                        <th>
                            Tổng Cộng
                        </th>
                        <th>
                            Trạng Thái
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Order_TimeBooking.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Order_RoomCount)
                            </td>
                            <td>
                                @item.Order_CheckIn.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @item.Order_CheckOut.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Order_Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Order_PriceSale)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Order_PriceTotal)
                            </td>
                            <td>
                                @item.Order_Status
                            </td>
                            <td>

                                <a href="@Url.Action("Cancel","OrderDetails",new { id=item.Order_ID})" class="btn btn-primary">Hủy Phòng</a>
                            </td>
                        </tr>
                    }

                </table>
            }
        </div>
    </div>
</div>