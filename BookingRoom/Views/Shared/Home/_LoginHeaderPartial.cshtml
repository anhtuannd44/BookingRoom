@using Microsoft.AspNet.Identity
@using BookingRoom.Models
@{
    HouseModel db = new HouseModel();
}

@if (Request.IsAuthenticated)
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="mr-2 d-none d-lg-inline text-light">@User.Identity.Name</span>
            <img width="20" height="20" class="img-profile rounded-circle" src="~/Content/images/faces/face1.jpg" />
        </a>
        <!-- Dropdown - User Information -->
        <div class="dropdown-menu dropdown-menu-right shadow animated-grow-in small text-capitalize" style="z-index: 99999" aria-labelledby="userDropdown">
            <a class="dropdown-item" href="@Url.Action("Yourbooking","Profile")">
                <i class="mdi mdi-calendar-text"></i>
                Thông Tin Phòng Đặt
            </a>
            <a class="dropdown-item" href="@Url.Action("Index","Profile")">
                <i class="mdi mdi-account"></i>
                Thông Tin Tài Khoản
            </a>
            <a class="dropdown-item" href="@Url.Action("changepassword","Profile")">
                <i class="mdi mdi-key"></i>
                Đổi Mật Khẩu
            </a>
            <div class="dropdown-divider"></div>
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
            {
                @Html.AntiForgeryToken()
                <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">
                    <i class="mdi mdi-airplane-takeoff"></i>
                    Đăng Xuất
                </a>
            }
        </div>
    </li>
}
else
{
    <li class="nav-item px-3">
        <a class="nav-link btn btn-sm btn-outline-light px-3 mt-1" href="@Url.Action("Login","Account")">ĐĂNG NHẬP</a>
    </li>
}